{
  "enabled": {
    "devops": true,
    "voice": false,
    "personality": false
  },
  "settings": {
    "devops": {
      "allowed_paths": ["/mnt", "/appdata", "/home", "/tmp", "/var/log", "/crucible"],
      "blocked_commands": ["rm -rf /", "mkfs", "dd if=", ":(){:|:&};:", "chmod -R 777 /", "chown -R"],
      "docker_enabled": true,
      "max_file_size_mb": 10
    },
    "voice": {
      "stt_backend": "whisper_api",
      "tts_backend": "edge",
      "voice_id": "alloy",
      "elevenlabs_voice": "Rachel",
      "language": "en",
      "audio_format": "mp3",
      "audio_dir": "data/voice"
    },
    "personality": {
      "data_dir": "data/personalities",
      "default_personality": "default"
    }
  }
}
